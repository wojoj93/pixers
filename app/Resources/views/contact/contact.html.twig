{% extends 'base.html.twig' %}
{% block content %}
<section id="contact" class="content-section text-center">
    <div class="contact-section">
        <div class="container">
            <h2>{{ 'app.contact.contact_us' | trans }}</h2>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <form class="form-horizontal" method="post">
                        <div class="form-group">
                            <label for="exampleInputEmail2">{{ 'app.contact.email' | trans }}</label>
                            <input type="email" class="form-control" id="contact_email_input" placeholder="{{ 'app.contact.placeholder.email' | trans }}">
                        </div>
                        <div class="alert alert-danger hidden contact_form_errors" id="contact_form_error_email">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputName2">{{ 'app.contact.title' | trans }}</label>
                            <input type="text" class="form-control" id="contact_title_input" placeholder="{{ 'app.contact.placeholder.title' | trans }}">
                        </div>
                        <div class="alert alert-danger hidden contact_form_errors" id="contact_form_error_title">
                        </div>
                        <div class="form-group ">
                            <label for="exampleInputText">{{ 'app.contact.your_message' | trans }}</label>
                            <textarea class="form-control"  id="contact_content_input" placeholder="{{ 'app.contact.placeholder.description' | trans }}"></textarea>
                        </div>
                        <div class="alert alert-danger hidden contact_form_errors" id="contact_form_error_content">
                        </div>
                        <div class="alert alert-success hidden" id="contact_form_success_message">
                        </div>
                        <button type="submit" id="contact_form_submit" class="btn btn-default" onclick='return validateContactForm()'>{{ 'app.contact.send_message' | trans }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/app/js/app.js') }}"></script>
{% endblock %}